{
  "name": "@enxp/platform",
  "version": "1.0.0",
  "description": "Engineering Platform with Plug-and-Play Plugin Architecture",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "private": true,
  "workspaces": [
    "packages/*",
    "plugins/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd packages/backend && npm run dev",
    "dev:frontend": "cd packages/frontend && npm run dev",
    "build": "npm run build:core && npm run build:backend && npm run build:frontend",
    "build:core": "cd packages/core && npm run build",
    "build:backend": "cd packages/backend && npm run build",
    "build:frontend": "cd packages/frontend && npm run build",
    "plugin": "node packages/cli/dist/index.js",
    "test": "jest",
    "lint": "eslint . --ext .ts,.tsx",
    "clean": "rm -rf dist node_modules packages/*/dist plugins/*/dist"
  },
  "keywords": [
    "platform",
    "plugin",
    "extensible",
    "microservices"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
