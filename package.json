{
  "name": "@enxp/platform",
  "version": "1.0.0",
  "description": "Engineering Platform with Plug-and-Play Plugin Architecture",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "private": true,
  "workspaces": [
    "packages/*",
    "plugins/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:microfrontend": "bash scripts/dev-microfrontend.sh",
    "dev:backend": "cd packages/backend && npm run dev",
    "dev:frontend": "cd frontend-app && npm run dev",
    "dev:plugin": "cd plugins/$PLUGIN && npm run dev",
    "dev:plugin:standalone": "cd plugins/$PLUGIN && npm run dev:standalone",
    "start": "npm run start:server",
    "start:server": "npx tsx server.ts",
    "build": "npm run build:core && npm run build:backend && npm run build:frontend && npm run build:plugins",
    "build:core": "cd packages/core && npm run build",
    "build:backend": "cd packages/backend && npm run build",
    "build:frontend": "cd frontend-app && npm run build",
    "build:plugins": "bash scripts/build-all-plugins.sh",
    "build:plugin": "bash scripts/build-plugin.sh $PLUGIN",
    "plugin": "tsx packages/cli/src/index.ts",
    "create-plugin": "npm run plugin create",
    "test": "jest",
    "lint": "eslint . --ext .ts,.tsx",
    "clean": "rm -rf dist node_modules packages/*/dist plugins/*/dist frontend-app/dist"
  },
  "keywords": [
    "platform",
    "plugin",
    "extensible",
    "microservices"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.0",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@types/swagger-ui-express": "^4.1.8",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  }
}
