# ENXP Platform Environment Configuration
# Copy this file to .env and update with your values

# Node Environment
NODE_ENV=production

# Server Ports
BACKEND_PORT=3000
FRONTEND_PORT=80

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_secure_password_here
DB_DATABASE=enxp

# Database Options
DB_SYNCHRONIZE=false  # Set to true only in development to auto-sync schema
DB_LOGGING=false      # Set to true to enable SQL query logging

# Database Connection Pool
DB_POOL_MAX=10
DB_POOL_MIN=2
DB_IDLE_TIMEOUT=30000

# Frontend API URL (for production)
VITE_API_URL=http://localhost:3000
